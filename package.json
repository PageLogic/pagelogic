{
  "name": "pagelogic",
  "version": "2.0.0",
  "description": "HTML-based isomorphic reactive web framework for Node.js and the browser",
  "keywords": [
    "reactive",
    "web",
    "framework",
    "server",
    "middleware",
    "browser",
    "runtime",
    "isomorphic",
    "HTML"
  ],
  "homepage": "https://github.com/fcapolini/pagelogic/blob/main/README.md",
  "bugs": "https://github.com/fcapolini/pagelogic/issues",
  "repository": {
    "type": "git",
    "url": "git@github.com:fcapolini/pagelogic.git"
  },
  "author": "Fabrizio Capolini",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist/* && tsc && browserify dist/client/client.js -o dist/pagelogic-rt.js && cp package.json dist && cp README.md dist && cp LICENSE dist && chmod a+x dist/command.js",
    "test": "npm run build && mocha --exit -r ts-node/register test/**/*.test.ts",
    "test-only": "mocha --exit -r ts-node/register test/**/*.test.ts",
    "coverage": "nyc --reporter=cobertura npm run coverage-test",
    "coverage-test": "mocha --reporter mocha-junit-reporter --exit -r ts-node/register test/**/*.test.ts",
    "bump-minor": "npm version $(semver $npm_package_version -i minor)",
    "bump-patch": "npm version $(semver $npm_package_version -i patch)",
    "release": "npm run build && npm publish ./dist --tag latest"
  },
  "main": "index.js",
  "bin": {
    "pagelogic": "./index.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "browserify": "^17.0.0",
    "chai": "^4.3.7",
    "coverage-badges-cli": "^1.0.11",
    "mocha": "^10.1.0",
    "mocha-junit-reporter": "^2.2.1",
    "nyc": "^15.1.0",
    "regenerator-runtime": "^0.13.11",
    "semver": "^7.3.8",
    "ts-node": "^10.9.1",
    "tsify": "^5.0.4",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "happy-dom": "^12.10.3"
  }
}
